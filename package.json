{
  "name": "shark",
  "version": "1.0.0-Alpha",
  "author": "perdiz <adbonilla.ad@gmail.com>",
  "license": "MIT",
  "description": "Make your computer your personal cloud.",
  "copyright": "Copyright Â© 2020 perdiz",
  "repository": "https://github.com/alexdabo/shark.git",
  "main": "build/electron.js",
  "scripts": {
    "start": "tsc && electron ./build/electron.js",
    "dev:electron": "tsc -w & electron ./build/electron.js",
    "dev:web": "npm start & cd client && npm start",
    "test:electron": "mocha",
    "test:web": "cd client && npm run test",
    "test": "mocha && npm run test:web",
    "build:electron": "electron-builder",
    "build:client": "cd client && yarn build",
    "build": "tsc && yarn build:client && yarn build:electron",
    "format": "prettier --write \"{src/**/*,client/src/**/*}.{ts,tsx,css,json}\""
  },
  "keywords": [
    "Electron",
    "typescript"
  ],
  "dependencies": {
    "body-parser": "^1.19.0",
    "compressing": "^1.5.0",
    "connect-history-api-fallback": "^1.6.0",
    "cors": "^2.8.5",
    "electron-is-dev": "^1.2.0",
    "express": "^4.17.1",
    "fs-extra": "^9.0.0",
    "i18next": "^19.4.3",
    "ip": "^1.1.5",
    "lowdb": "^1.0.0",
    "mime-types": "^2.1.26",
    "moment": "^2.24.0",
    "multer": "^1.4.2",
    "portscanner": "^2.2.0",
    "react": "^16.13.1",
    "react-dom": "^16.13.1"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.0",
    "@types/chai": "^4.2.11",
    "@types/connect-history-api-fallback": "^1.3.3",
    "@types/cors": "^2.8.6",
    "@types/express": "^4.17.4",
    "@types/fs-extra": "^8.1.0",
    "@types/ip": "^1.1.0",
    "@types/lowdb": "^1.0.9",
    "@types/mime-types": "^2.1.0",
    "@types/mocha": "^7.0.2",
    "@types/multer": "^1.4.2",
    "@types/portscanner": "^2.1.0",
    "@types/react": "^16.9.33",
    "@types/react-dom": "^16.9.6",
    "@types/supertest": "^2.0.8",
    "chai": "^4.2.0",
    "electron": "^9.4.0",
    "electron-builder": "^22.5.1",
    "mocha": "^7.1.1",
    "prettier": "2.0.2",
    "supertest": "^4.0.2",
    "ts-node": "^8.8.2",
    "typescript": "^3.6.0"
  },
  "build": {
    "appId": "com.perdiz.shark",
    "files": [
      "./build/**/*",
      "./public/**/*",
      "./client/build/**/*"
    ],
    "linux": {
      "category": "Utility",
      "icon": "./public/icons/icon.icns",
      "target": [
        "AppImage",
        "deb",
        "snap",
        "rpm"
      ]
    },
    "mac": {
      "icon": "./public/icons/icon.icns",
      "category": "public.app-category.utilities",
      "target": [
        "pkg"
      ]
    },
    "win": {
      "icon": "./public/icons/icon.ico"
    },
    "directories": {
      "buildResources": "assets"
    }
  }
}
